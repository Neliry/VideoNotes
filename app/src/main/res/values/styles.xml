<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="EditorButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/default_layout_background</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ControlButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/round_button</item>
    </style>

    <style name="ResizeButton">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="ShapeButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">#fbfbfb</item>
    </style>

    <style name="ShapeEditorButtons">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">#fbfbfb</item>
    </style>

    <style name="ColorButtons">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">0.5dp</item>
        <item name="android:background">#5E5E5E</item>
    </style>
</resources>
